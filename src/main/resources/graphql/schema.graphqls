#Domain Model User
type Author {
    id: String
    firstName: String!
    lastName: String
}

input AuthorCreateInput {
    firstName: String
    lastName: String
}

#Domain Model Book
type Book {
    id: String
    title: String
    price: Float
}

input BookCreateInput {
    title: String!
}

type Query {
    findAllAuthors(pagination: Pagination!): [Author]
    findAuthorById(id: String!): Author
    findAllBooks: [Book]
    findBookById(id: String!): Book
}

#Mutations
type Mutation {
    createAuthor(author: AuthorCreateInput!): Author
    createBook(book: BookCreateInput!): Book
}

#Core
input Pagination{
    page: Int
    limit: Int
}

